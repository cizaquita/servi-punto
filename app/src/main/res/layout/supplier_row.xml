<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_Name"
        style="@style/txt_client_row"
        android:layout_weight="0.09"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingTop="10dp" 
        android:paddingRight="10dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_Payment"
        style="@style/txt_client_row"
        android:layout_weight="0.12"
        android:paddingLeft="4dp"
        android:paddingRight="0dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_Date"
        style="@style/txt_client_row_item"
        android:textStyle="normal"
        android:layout_weight="0.13" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <ImageView
        android:id="@+id/img_Pay"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:src="@drawable/pay_icon_bg_supplier" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <ImageView
        android:id="@+id/img_Edit"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:src="@drawable/edit_icon_bg_supplier" />

</LinearLayout>