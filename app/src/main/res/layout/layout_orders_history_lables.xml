<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/inventory_tab" >

    <TextView
        android:id="@+id/txt_OrdersHisInvoiceNo"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:text="@string/orders_invoice"
        android:textColor="@color/white_color"
        android:textStyle="bold"
        android:visibility="gone" />

    <View
        android:id="@+id/view_id"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_OrdersHisName"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:padding="8dp"
        android:text="@string/product"
        android:textColor="@color/white_color"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrdersHisPrice"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:text="@string/orders_price"
        android:textColor="@color/white_color"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrdersHisQty"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:text="@string/quantity"
        android:textColor="@color/white_color"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_divid"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrdersHisUnits"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:text="@string/sales_units"
        android:textColor="@color/white_color"
        android:textStyle="bold" />

</LinearLayout>