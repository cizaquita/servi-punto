<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_logo"
        style="@style/header_logo"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/m_shope_open" />

    <ImageView
        android:id="@+id/img_home"
        style="@style/header_home_icon"
        android:contentDescription="@string/img_content_desc"
        android:onClick="showMenuScreen"
        android:src="@drawable/o_home_icon" />

    <TextView
        android:id="@+id/textView1"
        style="@style/header_title"
        android:layout_toRightOf="@+id/iv_logo"
        android:text="@string/title_shopopen"
        android:textColor="@color/customer_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/img_home"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_shopname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_name_label"
                android:textColor="@color/customer_view"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/customer_view"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_shop_datetime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_date_label"
                android:textColor="@color/customer_view"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_shop_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/customer_view"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>