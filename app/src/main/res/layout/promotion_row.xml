<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_providername"
        style="@style/txt_client_row_item"
       android:layout_weight="0.09"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor" />

    <TextView
        android:id="@+id/txt_promotionname"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />
    
     <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor" />

    <TextView
        android:id="@+id/txt_video"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />
     <View
        android:id="@+id/cart_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_promotionCart"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/buy_promotion_item" 
        android:visibility="gone"/>

   

</LinearLayout>