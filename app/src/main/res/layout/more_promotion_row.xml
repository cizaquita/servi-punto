<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_morepromotionName"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_morepromDesp"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_morepromotionSupp"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_morepromotionSdate"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_morepromotionEdate"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />
     <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_value"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09" />

    <View
        android:id="@+id/cart_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <ImageView
        android:id="@+id/img_morepromotionBuy"
        style="@style/txt_client_row_item"
        android:layout_weight="0.09"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/buy_promotion_item" />

</LinearLayout>