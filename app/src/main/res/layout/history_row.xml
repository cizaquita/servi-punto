<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_datetime"
        style="@style/txt_client_row_item"
        android:layout_weight="0.10"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/date"
        android:textColor="@color/text_color_onwhite" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_concept"
        style="@style/txt_client_row_item"
        android:layout_weight="0.10"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/amnt_reason"
        android:textColor="@color/text_color_onwhite" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_debut"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:text="@string/initialdebt"
        android:textColor="@color/text_color_onwhite" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_pay"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:text="@string/pay"
        android:textColor="@color/text_color_onwhite" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_bal"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:text="@string/balance"
        android:textColor="@color/text_color_onwhite" />

</LinearLayout>