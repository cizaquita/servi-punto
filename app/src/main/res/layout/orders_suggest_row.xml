<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_OrderSuggName"
        style="@style/txt_client_row"
        android:layout_weight="0.12"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrderSuggPrice"
        style="@style/txt_client_row"
        android:layout_weight="0.12"
        android:gravity="center" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrderSuggQty"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:textStyle="normal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrderSuggUnits"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:textStyle="normal" />

</LinearLayout>