<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_SuppliersName"
        style="@style/list_item_row"
        android:layout_weight="0.09"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingTop="10dp" 
        android:paddingRight="10dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor" />

    <TextView
        android:id="@+id/txt_SuppliersPayment"
        style="@style/list_item_row"
        android:layout_weight="0.12"
        android:paddingLeft="4dp"
        android:paddingRight="0dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor" />

    <TextView
        android:id="@+id/txt_SuppliersDate"
        style="@style/list_item_row"
        android:layout_weight="0.13" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor" />

    <ImageView
        android:id="@+id/img_SuppliersPay"
       style="@style/list_item_row"
        android:layout_weight="0.13"
        android:src="@drawable/pay_icon_bg" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/h_divcolor" />

    <ImageView
        android:id="@+id/img_SuppliersEdit"
        style="@style/list_item_row"
        android:layout_weight="0.13"
        android:src="@drawable/edit_icon_bg" />

</LinearLayout>