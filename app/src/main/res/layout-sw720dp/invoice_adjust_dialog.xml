<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:background="@color/white_color"
    android:paddingBottom="10dp" >

   <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/sale_tab"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@color/white_color"
            android:textSize="20sp"
            android:text="@string/hint_inv_num"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:contentDescription="@string/img_content_desc"
            android:src="@drawable/cancel_btn_bg" />
    </RelativeLayout>

   

        <EditText
            android:id="@+id/etxt_invoiceNum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_inv_num"
            android:layout_alignRight="@+id/ll_btn"
            android:layout_below="@+id/layout_header"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/inventory_popup_input_filed"
            android:padding="5dp" />

    

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_invoiceNum"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_InvoiceSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recharge_menu_modules_innerbtn"
            android:gravity="center"
            android:text="@string/hint_search"
            android:textColor="@color/white_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_InvoiceCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/new_cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>