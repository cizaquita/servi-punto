<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:paddingBottom="10dp">


        <TextView
            android:id="@+id/txt_DeleteT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/delete"
            android:textColor="@color/white_color"
            android:background="@color/sale_tab"
            android:textSize="20sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/txt_Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_DeleteT"
            android:text="@string/sales_delete"
            android:textColor="@color/black_color"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:padding="6dp"
            android:textStyle="bold" />
        
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Delete"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" >

        <Button
            android:id="@+id/btn_DeleteYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cash_button"
            android:text="@string/yes"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/btn_DeleteNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_cancel"
            android:text="@string/no"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white_color"
            android:textStyle="bold" />

        
    </LinearLayout>

</RelativeLayout>