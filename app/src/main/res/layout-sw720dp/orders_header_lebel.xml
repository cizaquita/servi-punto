<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/inventory_tab" >

    <TextView
        android:id="@+id/txt_OrdersNameLeble"
        style="@style/list_header_row"
        android:layout_weight="0.12"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="@string/product"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrdersPriceLebel"
        style="@style/list_header_row"
        android:layout_weight="0.12"
        android:textStyle="bold"
        android:text="@string/orders_price" 
        android:textColor="@color/white_color"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrdersSuggestLebel"
        style="@style/list_header_row"
        android:layout_weight="0.13"
        android:textStyle="bold"
        android:text="@string/suggested_price"
        android:textColor="@color/white_color" />

    <View
        android:id="@+id/view_divid"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_OrdersCartLebel"
        style="@style/list_header_row"
        android:layout_weight="0.13"
        android:textStyle="bold"
        android:text="@string/add_to_cart" 
        android:textColor="@color/white_color"/>

</LinearLayout>