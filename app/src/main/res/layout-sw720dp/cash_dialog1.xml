<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/blue_color"
        android:padding="10dp"
        android:textColor="@color/white_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_reason"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp" >

        <TextView
            android:id="@+id/txt_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/reason"
            android:textColor="@color/black_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etxt_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/etxt_bg"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/txt_bal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/value"
            android:textColor="@color/black_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etxt_bal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/etxt_bg"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_value"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_dialog_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/addclient_innerbtn_bg"
            android:text="@string/save" />

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_dialog_Save"
            android:background="@drawable/addclient_innerbtn_bg"
            android:padding="15dp"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>