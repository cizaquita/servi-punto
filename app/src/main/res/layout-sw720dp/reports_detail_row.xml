<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_quantity"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_profitability"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_product"
        style="@style/txt_client_row_item"
        android:layout_weight="0.11"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view" />

    <TextView
        android:id="@+id/txt_quantitysold"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color" />

    <View
        android:id="@+id/report_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_total_losers"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color"
        android:visibility="gone" />

    <View
        android:id="@+id/report_view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_state"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color"
        android:visibility="gone"
         />

    <View
        android:id="@+id/report_view3"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_operator"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color"
        android:visibility="gone" />

    <View
        android:id="@+id/report_view4"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_facturas"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/reports_list_row_txt_color"
        android:visibility="gone" />

    <View
        android:id="@+id/report_view5"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_accept"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:background="@color/btn_accpet"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/dispers_btnaccept"
        android:textColor="@color/white_color"
        android:visibility="gone"
        android:layout_margin="5dp" />

    <View
        android:id="@+id/report_view6"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/customer_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_reject"
        style="@style/txt_client_row_item"
        android:layout_weight="0.12"
        android:background="@color/btn_reject"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/dispers_btnreject"
        android:textColor="@color/white_color"
        android:visibility="gone" 
        android:layout_margin="5dp"/>

</LinearLayout>