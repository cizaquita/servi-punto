<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/layout_popup_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/customer_tab"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_ProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/modulo_efectivo"
            android:textColor="@color/white_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/img_content_desc"
            android:padding="10dp"
            android:src="@drawable/cancel_btn_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_popup_header"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/layout_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_popup_header"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/Btn_Aceptacion"
                style="@style/btn_main"
                android:background="@drawable/efectivo_modulo_bg"
                android:text="@string/aceptacions"
                android:textColor="@color/white_color" />

            <Button
                android:id="@+id/btn_Devolucion"
                style="@style/btn_main"
                android:background="@drawable/efectivo_modulo_bg"
                android:text="@string/devolucions"
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_btns"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/btn_registro"
                style="@style/btn_main"
                android:background="@drawable/efectivo_modulo_bg"
                android:text="@string/registro_de_efectivo"
                android:textColor="@color/white_color" />

            <Button
                android:id="@+id/Control_de_dispersion"
                style="@style/btn_main"
                android:background="@drawable/efectivo_modulo_bg"
                android:text="@string/control_de_dispersion"
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btns3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_btns2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/btn_Centros_de_Acopio"
                style="@style/btn_main"
                android:background="@drawable/efectivo_modulo_bg"
                android:text="@string/centros_de_Acopio"
                android:textColor="@color/white_color" />

            <Button
                android:id="@+id/btn_abono"
                style="@style/btn_main"
                android:background="@drawable/efectivo_modulo_bg"
                android:text="@string/Abono_a_cuenta"
                android:textColor="@color/white_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>