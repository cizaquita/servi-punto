<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/lyout_daviplata_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/sale_tab"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_dialog_modulo_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/crear_nuevo_depositante"
            android:textColor="@color/white_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_clse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/img_content_desc"
            android:padding="10dp"
            android:src="@drawable/cancel_btn_bg" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyout_daviplata_header" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_btn"
        android:layout_below="@+id/text_view"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_content_daviplata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/txt_dialog_inv"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/document"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edxt_document"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="15"
                    android:password="true" />

                <TextView
                    style="@style/txt_dialog_inv"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/primer_nombre"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_first_Name"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="10" />

                <TextView
                    style="@style/txt_dialog_inv"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/apellidos"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_surname"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="15" />

                <TextView
                    style="@style/txt_dialog_inv"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/celular"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edit_cellular_daviplata"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="10" />

                <TextView
                    style="@style/txt_dialog_inv"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/dereccion"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edit_address_daviplata"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/txt_dialog_inv_right"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/confirmar_document"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edit_check_document"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="15"
                    android:password="true" />

                <TextView
                    style="@style/txt_dialog_inv_right"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/sigundo_nombre"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_second_Name"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="10" />

                <TextView
                    style="@style/txt_dialog_inv_right"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/confirmar_apellido"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_second_Surname"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="15" />

                <TextView
                    style="@style/txt_dialog_inv_right"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/confirm_celular"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edit_check_Cell"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="10" />

                <TextView
                    android:id="@+id/txtdate"
                    style="@style/txt_dialog_inv_right"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/fecha_expedicion"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/edit_expedition_date"
                    style="@style/etxt_dialog_inv_right"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/date_picker"
                    android:gravity="center"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="15dp" />

                <TextView
                    style="@style/txt_dialog_inv_right"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:text="@string/cuidad"
                    android:textColor="@color/text_color_onwhite"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edit_city"
                    style="@style/etxt_dialog_inv"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"
                    android:maxLength="20" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_daviplata_create"
            style="@style/recharge_bttons"
            android:background="@drawable/cash_button"
            android:text="@string/crear" />

        <Button
            android:id="@+id/btn_daviplata_cancel"
            style="@style/recharge_bttons"
            android:layout_marginLeft="10dp"
            android:background="@drawable/new_cancel"
            android:text="@string/reg_cancel" />
    </LinearLayout>

</RelativeLayout>