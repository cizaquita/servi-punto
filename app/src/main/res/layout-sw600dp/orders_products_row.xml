<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_invoicenumber"
        style="@style/txt_client_row"
        android:layout_weight="0.12"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/view_id"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_ProductName"
        style="@style/txt_client_row"
        android:layout_weight="0.12"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_ProductPrice"
        style="@style/txt_client_row"
        android:layout_weight="0.12"
        android:gravity="center" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_ProductSuggest"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <ImageView
        android:id="@+id/img_ProductCart"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/add_to_cart_icon_bg" />

    <TextView
        android:id="@+id/txt_Product"
        style="@style/txt_client_row"
        android:layout_weight="0.13"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view"
        android:visibility="gone" />

</LinearLayout>