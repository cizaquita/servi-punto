<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_HistoryInvoice"
        style="@style/list_header_row"
        android:layout_weight="0.12"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/black_color"
        android:textStyle="normal"
        android:text="@string/history_invoice" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_HistorySupplier"
        style="@style/list_header_row"
        android:layout_weight="0.12"
        android:textColor="@color/black_color"
        android:textStyle="normal"
        android:text="@string/suppliers" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/inventory_view" />

    <TextView
        android:id="@+id/txt_HistoryAmount"
        style="@style/list_header_row"
        android:layout_weight="0.13"
        android:textColor="@color/black_color"
        android:textStyle="normal"
        android:text="@string/history_amount" />
   
</LinearLayout>