<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_cash_type"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:src="@drawable/edit_icon" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sale_view" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp" >

        <TextView
            android:id="@+id/txt_cash_description"
            style="@style/txt_client_row"
            android:paddingLeft="4dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/txt_cash_datetime"
            style="@style/txt_client_row"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sale_view" />

    <TextView
        android:id="@+id/txt_cash_valuemovement"
        style="@style/txt_client_row_item"
        android:layout_weight="0.13"
        android:textColor="@color/text_color_onwhite" />

</LinearLayout>