<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pnl_Header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_logo"
        style="@style/header_logo"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/new_client_a" />

    <ImageView
        android:id="@+id/img_home"
        style="@style/header_home_icon"
        android:contentDescription="@string/img_content_desc"
        android:onClick="showMenuScreen"
        android:src="@drawable/o_home_icon" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/header_title"
        android:layout_toRightOf="@+id/img_logo"
        android:text="@string/delivery_history"
        android:textColor="@color/customer_view" />

    <TextView
        android:id="@+id/txt_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/img_home"
        android:textColor="@color/white_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/txt_phonenumber"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/client_phone_icon" />

    <TextView
        android:id="@+id/txt_clientname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/img_phone"
        android:textColor="@color/white_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_clientname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_clientname"
        android:contentDescription="@string/img_content_desc"
        android:src="@drawable/client_name_icon" />

</RelativeLayout>