<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/acceptence_confm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/customer_tab"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_changepass_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/cash_acceptance_conformation"
            android:textColor="@color/white_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/img_content_desc"
            android:padding="10dp"
            android:src="@drawable/cancel_btn_bg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_ActualAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acceptence_confm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acceptence_message_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/acopio_dialog_msssg_start"
            android:textColor="@color/black_color"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_ActualAmount"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/btn_dispersion_confrm"
            style="@style/recharge_bttons"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cash_button"
            android:text="@string/reg_cnfrm" />

        <Button
            android:id="@+id/btn_dispersion_cancel"
            style="@style/recharge_bttons"
            android:layout_marginLeft="10dp"
            android:background="@drawable/new_cancel"
            android:onClick="showMenuScreen"
            android:text="@string/anular" />
    </LinearLayout>

</RelativeLayout>